<!DOCTYPE html>
<html lang="en" class="h-full">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>KhaataPro - View Hisaab</title>
  <link rel="icon" href="https://placehold.co/32x32/cccccc/000000?text=K"/>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet"/>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          fontFamily: {
            poppins: ['Poppins', 'sans-serif'],
          }
        }
      }
    }
  </script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"/>
  <!-- Chart.js for Analytics -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
 <body class="min-h-screen bg-indigo-600 font-poppins relative overflow-x-hidden">

  <!-- Diagonal Gradient Overlay -->
  <div class="absolute inset-0 bg-gradient-to-br from-indigo-700/20 to-transparent"></div>

  <main class="w-full min-h-screen relative z-10">
    <!-- Top Navigation Bar -->
    <nav class="fixed top-0 left-0 right-0 bg-indigo-700 bg-opacity-50 backdrop-blur-md py-4 px-4 md:px-10 z-20">
      <div class="max-w-7xl mx-auto flex flex-col sm:flex-row items-center justify-between gap-4">
        <div class="flex items-center">
         <a href="/"> <i class="fas fa-wallet text-white text-2xl mr-2"></i></a>
          <h1 class="text-2xl font-bold text-white">KhaataPro</h1>
        </div>
        <div class="flex gap-6">
          <a href="/dashboard" class="text-white hover:text-indigo-200 text-sm flex items-center">
            <i class="fas fa-chart-line mr-1"></i> Dashboard
          </a>
          <a href="/create" class="text-white hover:text-indigo-200 text-sm flex items-center">
            <i class="fas fa-plus mr-1"></i> Create
          </a>
          <form action="/logout" method="POST">
            <button type="submit" class="text-white hover:text-indigo-200 text-sm flex items-center">
              <i class="fas fa-sign-out-alt mr-1"></i> Logout
            </button>
          </form>
        </div>
      </div>
    </nav>

    <!-- Split-Screen Content -->
    <div class="px-4 md:px-10 pt-24 pb-12 max-w-7xl mx-auto flex flex-col lg:flex-row gap-8">
      <!-- Left Side: Expense Details (Hero Card) -->
      <div class="lg:w-1/2 flex items-center justify-center">
        <div class="bg-white bg-opacity-10 backdrop-blur-sm rounded-3xl p-8 shadow-2xl w-full max-w-lg animate-fadeIn relative">
              
   
          <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-6">
            
            <h3 class="text-3xl font-bold text-white"><%= hisaab.title %></h3>
            <span class="text-sm text-indigo-200 mt-2 sm:mt-0 sm:ml-4"> <%= hisaab.date.toDateString() %></span>
           
          </div>
          <ul class="space-y-3 mb-8">
             <% hisaab.content.forEach(item => { %>
            <li class="flex justify-between border-b border-indigo-500 border-opacity-30 py-2">
              <span class="text-white font-medium"><%= item.key %></span>
              <span class="text-indigo-200">₹ <%= item.value %></span>
            </li>
            <% }) %>
          </ul>
           <div class="absolute top-4 right-4 flex gap-3">
    <a href="/hisaab/<%= hisaab._id  %>/edit" class="text-indigo-200 hover:text-indigo-100 transition duration-200">
      <i class="fas fa-edit text-lg"></i>
    </a>
    <form action="/hisaabs/<%= hisaab._id %>/delete" method="POST" onsubmit="return confirm('Are you sure you want to delete this Hisaab?')">
      <button type="submit" class="text-red-400 hover:text-red-500 transition duration-200">
        <i class="fas fa-trash text-lg"></i>
      </button>
    </form>
  </div> 
        </div>
      </div>

      <!-- Right Side: Analytics (Floating Card) -->
      <div class="lg:w-1/2 flex items-center justify-center">
        <div class="bg-white bg-opacity-10 backdrop-blur-sm rounded-3xl p-8 shadow-2xl w-full max-w-lg animate-fadeIn lg:-mt-16">
          <h3 class="text-xl font-bold text-white mb-4">Expense Analytics</h3>
          <p class="text-indigo-200 mb-4">Distribution of expenses by item</p>
          <canvas id="expenseChart" width="400" height="400"></canvas>
        </div>
      </div>
    </div>
  </main>

  <!-- Chart.js Initialization -->
  <script>
      // ✅ These arrays are visible to browser JavaScript
    const data1 = <%- JSON.stringify(hisaab.content) %>;
  const keys = data1.map(item => item.key);
  const values = data1.map(item => item.value);
  const labels = keys;
const data = values;


    const ctx = document.getElementById('expenseChart').getContext('2d');
    new Chart(ctx, {
      type: 'pie',
      data: {
        labels: labels,
        datasets: [{
          data: data,
          backgroundColor: ['#4f46e5', '#7c3aed', '#db2777', '#f472b6'],
          borderColor: ['#ffffff'],
          borderWidth: 1
        }]
      },
      options: {
        responsive: true,
        plugins: {
          legend: {
            position: 'top',
            labels: {
              color: '#e0e7ff',
              font: { size: 14 }
            }
          },
          title: {
            display: true,
            text: 'Expense Breakdown',
            color: '#e0e7ff',
            font: { size: 16 }
          }
        }
      }
    });
     // Select all elements that contain amounts (₹ ...)
  const amounts = document.querySelectorAll("ul li span:last-child");
  let total = 0;

  amounts.forEach(span => {
    // Remove '₹' and any spaces, then convert to number
    const value = parseFloat(span.textContent.replace(/[₹,\s]/g, ""));
    total += value;
  });

  // Create and display a total section dynamically
  const totalElement = document.createElement("div");
  totalElement.className = "mt-6 text-right text-white font-semibold text-lg border-t border-indigo-400 pt-3";
  totalElement.textContent = `Total Amount: ₹ ${total}`;

  // Append it below the list
  const expenseCard = document.querySelector(".bg-white.bg-opacity-10.backdrop-blur-sm.rounded-3xl.p-8.shadow-2xl");
  expenseCard.appendChild(totalElement);
  </script>

  <!-- Animations -->
  <style>
    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }
    .animate-fadeIn {
      animation: fadeIn 0.8s ease-out;
    }

    
  </style>
</body>
</html>